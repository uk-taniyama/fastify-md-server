<html>
<style>
  td {
    padding-right: 2rem; 
  }
  .content {
    margin-left: auto;
    margin-right: auto;
    max-width: 100rem;
  }
</style>
<body>
  <div class="content">
    <table>
      <% dirs.filter(dir => !dir.name.startsWith('.')).forEach((dir) => { %>
        <tr><td><a href="<%= dir.href %>"><%= dir.name %>/</a></td><td align="right">-</td><td><%= dir.stats.mtime.toISOString() %></td></tr>
      <% }); %>
      <% files.filter(file => !file.name.startsWith('.')).forEach((file) => { %>
        <tr><td><a href="<%= file.href %>"><%= file.name %></a></td><td align="right"><%= file.stats.size %></td><td><%= file.stats.mtime.toISOString() %></td></tr>
      <% }); %>
    </table>
  </div>
</body>

</html>
