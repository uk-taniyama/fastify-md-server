{
  "name": "fastify-md-server",
  "description": "fastify markdown server.",
  "homepage": "https://github.com/uk-taniyama/fastify-md-server",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "fastify",
    "markdown",
    "server"
  ],
  "files": [
    "dist/**",
    "list.ejs",
    "CHANGELOG.md",
    "README.md",
    "package.json"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uk-taniyama/fastify-md-server"
  },
  "bugs": {
    "url": "https://github.com/uk-taniyama/fastify-md-server/issues"
  },
  "scripts": {
    "start": "npm-run-all -p watch dev",
    "dev": "nodemon dist/index.js",
    "build": "rollup -c",
    "watch": "rollup -c --watch",
    "lint": "eslint -f ./src/test-utils/eslint-formatter.cjs .eslintrc.cjs jest.config.js rollup.config.js src/**/*",
    "test": "jest"
  },
  "dependencies": {
    "@fastify/static": "^6.5.0",
    "ejs": "^3.1.8",
    "fastify": "^4.6.0",
    "fastify-plugin": "^4.0.0",
    "github-markdown-css": "^5.1.0",
    "highlight.js": "^11.6.0",
    "marked": "^4.1.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@swc/core": "^1.2.220",
    "@swc/jest": "^0.2.22",
    "@tsconfig/node16-strictest-esm": "^1.0.3",
    "@types/ejs": "^3.1.1",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/marked": "^4.0.7",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "chalk": "^4.0.0",
    "eslint": "^8.20.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "fastify-cli": "^5.4.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-esbuild": "^4.10.1",
    "rollup-plugin-styles": "^4.0.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "vite": "^3.0.4"
  }
}
